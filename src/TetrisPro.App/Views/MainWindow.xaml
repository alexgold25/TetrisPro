<Window x:Class="TetrisPro.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TetrisPro.App.ViewModels"
        xmlns:ctrl="clr-namespace:TetrisPro.App.Controls"
        Title="TetrisPro" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ctrl:PlayfieldControl Grid.Column="0" ItemsSource="{Binding BoardCells}" />
        <StackPanel Grid.Column="1" Margin="10">
            <ctrl:MiniBoardControl ItemsSource="{Binding HoldPiece}" Header="Hold" Height="100" Margin="0,0,0,20"/>
            <ctrl:MiniBoardControl ItemsSource="{Binding NextPieces}" Header="Next" Height="100" Margin="0,0,0,20"/>
            <TextBlock Text="{Binding Score, StringFormat=Score: {0}}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Level, StringFormat=Level: {0}}" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Lines, StringFormat=Lines: {0}}" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="New Game" Command="{Binding NewGameCommand}" />
                <Button Content="Pause" Command="{Binding PauseCommand}" Margin="10,0,0,0"/>
                <Button Content="Resume" Command="{Binding ResumeCommand}" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
